                <search string="Busqueda de companias">
                    <field name="timeframes_ids" />
                </search>
            </field>

        </record>

         <record id="res_company_action_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">res.company.action.act.window</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
