<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_dia_no_laboral" model="ir.ui.view">
            <field name="name">Dia no laboral</field>
            <field name="model">asw.dia_no_laboral</field>
            <field name="arch" type="xml">
                <form string='Datos del dia no laboral'>
                    <header>
                        
                    </header>
                    <sheet>
                        <div>
                            <label for='name' class='oe_edit_only' />
                            <h1><field name="name" /></h1>
                        </div>
                        <notebook>
                            <page string='Datos' >
                                <group col='4' string='Datos del dia no laboral'>
                                    <field name="date_start" />
                                    <field name="date_end" />
                               </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_dia_no_laboral" model="ir.ui.view">
            <field name="name">Dia no laboral</field>
            <field name="model">asw.dia_no_laboral</field>
            <field name="arch" type="xml">
                <tree string='Dias no laborales' sample='1'>
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                </tree>
            </field>
        </record>

        <record id="view_search_dia_no_laboral" model="ir.ui.view">
            <field name="name">Dia no laboral</field>
            <field name="model">asw.dia_no_laboral</field>
            <field name="arch" type="xml">
                <search string='Dias no laborales'>
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <filter string="Sin nombre" name="Sin nombre" domain="[('name', '=', 'None')]"/>
                    <filter string="Sin fecha inicio" name="Sin fecha inicio" domain="[('date_start', '=', None)]"/>
                    <filter string="Sin fecha fin" name="Sin fecha fin" domain="[('date_end', '=', None)]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>