<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.ui.view" id="appointments_res_company_view">
            <field name="name">appointments.res_company.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <notebook>
                    <page string='Horarios' >
                        
                        <group col='4'>
                            <field name="appointment_qty" />
                            <field name="appointment_duration" />
                            <field name="start_time" widget='timefloat'/>
                            <field name="end_time" widget='floattime'/>
                        </group>
                        
                        <group string='Horarios compania'>
                            <field name="timeframes_ids" nolabel='1'>
                                <tree create="true" delete="true" edit="true" editable="bottom">
                                    <field name="day" />
                                    <field name="enabled" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>