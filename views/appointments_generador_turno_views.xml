<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="appointments_generador_turno_view_form" model="ir.ui.view">
            <field name="name">appointments.generador.turno.view.form</field>
            <field name="model">appointments.generador.turno</field>
            <field name="arch" type="xml">
                <form string='Datos del generador de turnos'>
                    <header>
                        
                    </header>
                    <sheet>
                        <div>
                            <label for='company_id' class='oe_edit_only' />
                            <h1><field name="company_id" /></h1>
                        </div>
                        <notebook>
                            <page string='Datos' >
                                <group col='4' string='Datos del generador de turnos'>
                                    <field name="company_id" />
                                        <newline />
                                    <separator string='Datos del turno generado' />
                                        <newline />
                                    <field name="state" />
                                    <field name="date_start" />
                                    <field name="date_end" />
                                        <newline />
                                    <separator string='Datos de turnos' />
                                        <newline />
                                    <field name="turnos_ids"  nolabel='1' />
                               </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="appointments_generador_turno_view_tree" model="ir.ui.view">
            <field name="name">appointments.generador.turno.view.tree</field>
            <field name="model">appointments.generador.turno</field>
            <field name="arch" type="xml">
                <tree string='Generador de turnos' sample='1'>
                    <field name="company_id" />
                    <field name="state" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="turnos_ids" />
                </tree>
            </field>
        </record>

        <record id="appointments_generador_turno_view_search" model="ir.ui.view">
            <field name="name">appointments.generador.turno.view.search</field>
            <field name="model">appointments.generador.turno</field>
            <field name="arch" type="xml">
                <search string='Generador de turnos'>
                    <field name="company_id" />
                    <field name="state" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="turnos_ids" />
                    <filter string="Cancelado" name="Cancelado" domain="[('state', '=', 'cancelado')]"/>
                    <filter string="Sin fecha inicio" name="Sin fecha inicio" domain="[('date_start', '=', None)]"/>
                    <filter string="Sin fecha fin" name="Sin fecha fin" domain="[('date_end', '=', None)]"/>
                </search>
            </field>
        </record>

        <record id="appointments_generador_turno_view_calendar" model="ir.ui.view">
            <field name="name">appointments.generador.turno.view.calendar</field>
            <field name="model">appointments.generador.turno</field>
            <field name="arch" type="xml">
                <calendar string="Calendar" date_start="date_start" date_stop="date_end" color="state">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state" />
                </calendar>
            </field>
        </record>

        <record id="appointments_generador_turno_action_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">appointments.generador.turno.action.act.window</field>
            <field name="res_model">appointments.generador.turno</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Genere el primer turno</p>
            </field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>