<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="appointments_dia_no_laboral_view_form" model="ir.ui.view">
            <field name="name">appointments.dia.no.laboral.view.form</field>
            <field name="model">appointments.dia.no.laboral</field>
            <field name="arch" type="xml">
                <form string='Datos del dia no laboral'>
                    <header>
                        
                    </header>
                    <sheet>
                        <div>
                            <label for='name' class='oe_edit_only' />
                            <h1><field name="name" /></h1>
                        </div>
                        <notebook>
                            <page string='Datos' >
                                <group col='4' string='Datos del dia no laboral'>
                                    <field name="date_start" />
                                    <field name="date_end" />
                               </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="appointments_dia_no_laboral_view_tree" model="ir.ui.view">
            <field name="name">appointments.dia.no.laboral.view.tree</field>
            <field name="model">appointments.dia.no.laboral</field>
            <field name="arch" type="xml">
                <tree string='Dias no laborales' sample='1'>
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                </tree>
            </field>
        </record>

        <record id="appointments_dia_no_laboral_view_search" model="ir.ui.view">
            <field name="name">appointments.dia.no.laboral.view.search</field>
            <field name="model">appointments.dia.no.laboral</field>
            <field name="arch" type="xml">
                <search string='Dias no laborales'>
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <filter string="Sin nombre" name="Sin nombre" domain="[('name', '=', 'None')]"/>
                    <filter string="Sin fecha inicio" name="Sin fecha inicio" domain="[('date_start', '=', None)]"/>
                    <filter string="Sin fecha fin" name="Sin fecha fin" domain="[('date_end', '=', None)]"/>
                </search>
            </field>
        </record>

        <record id="appointments_dia_no_laboral_action_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">appointments.dia.no.laboral.action.act.window</field>
            <field name="res_model">appointments.dia.no.laboral</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Ingrese algun dia no laborable</p>
            </field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>