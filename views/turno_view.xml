<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_form_turno" model="ir.ui.view">
            <field name="name">Turno</field>
            <field name="model">asw.turno</field>
            <field name="arch" type="xml">
                <form string='Datos de turnos'>
                    <header>
                        
                    </header>
                    <sheet>
                        <div>
                            <label for='date' class='oe_edit_only' />
                            <h1><field name="date" /></h1>
                        </div>
                        <notebook>
                            <page string='Datos' >
                                <group col='4' string='Datos del turno'>
                                    <field name="date_start" />
                                    <field name="date_end" />
                                    <field name="state" />
                                        <newline />
                                    <separator string='Datos relacionales' />
                                        <newline />
                                    <field name="partner_id" />
                                    <field name="company_id" />
                                    <field name="generator_id" />
                               </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_turno" model="ir.ui.view">
            <field name="name">Turno</field>
            <field name="model">asw.turno</field>
            <field name="arch" type="xml">
                <tree string='Turnos' sample='1'>
                    <field name="date" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state" />
                    <field name="partner_id" />
                    <field name="company_id" />
                    <field name="generator_id" />
                </tree>
            </field>
        </record>

        <record id="view_search_turno" model="ir.ui.view">
            <field name="name">Turno</field>
            <field name="model">asw.turno</field>
            <field name="arch" type="xml">
                <search string='Busqueda de turnos'>
                    <field name="date" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state" />
                    <field name="partner_id" />
                    <field name="company_id" />
                    <field name="generator_id" />
                    <filter string="Sin fecha inicio" name="Sin fecha inicio" domain="[('date_start', '=', None)]"/>
                    <filter string="Sin fecha fin" name="Sin fecha fin" domain="[('date_end', '=', None)]"/>
                    <filter string="Cancelado" name="Cancelado" domain="[('state', '=', 'Cancelado')]"/>
                </search>
            </field>
        </record>

        <record id="action_turno_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Turnos</field>
            <field name="res_model">asw.turno</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Ingrese algun turno</p>
            </field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>